#ifndef I2C_SLAVE_H_FILE_H_
#define I2C_SLAVE_H_FILE_H_

#include <mega16.h>
//#include <cstdint.h>								/* Include AVR std. library file */

void I2C_Slave_Init(int slave_address);		/* I2C slave initialize function with Slave address */
int I2C_Slave_Listen();						/* I2C slave listen function */
int I2C_Slave_Transmit(char data);			/* I2C slave transmit function */
char I2C_Slave_Receive();						/* I2C slave receive function */

#endif /* I2C_SLAVE_H_FILE_H_ */